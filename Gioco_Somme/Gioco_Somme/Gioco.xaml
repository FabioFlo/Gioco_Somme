<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gioco_Somme.Gioco">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label Text="" x:Name="lbl_quiz" HorizontalOptions="Center" FontSize="18" FontAttributes="Bold" BackgroundColor="Ivory" />
            <Grid ColumnDefinitions="*,*">
                <Button x:Name="btn_Risp_A" Clicked="btn_Risp_A_Clicked"
                    Text="A" />
                <Button x:Name="btn_Risp_B" Grid.Column="1" Clicked="btn_Risp_B_Clicked"
                    Text="B" />
                <Button x:Name="btn_Risp_C" Grid.Column="2" Clicked="btn_Risp_C_Clicked"
                    Text="C" />
            </Grid>
            <Label x:Name="lbl_seconds"
                   Text=""
                   FontFamily="ComicSans"
                   FontSize="20"
                   BackgroundColor="Aquamarine"
                   HorizontalOptions="Center" />
            <Button Text="Start"
                    x:Name="btn_startGame"
                    Clicked="btn_startGame_Clicked"
                    VerticalOptions="End"/>
            
            <Button Text="Esci" 
                    x:Name="btn_esci" 
                    VerticalOptions="EndAndExpand"
                    Clicked="btn_esci_Clicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>